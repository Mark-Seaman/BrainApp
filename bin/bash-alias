#!/bin/bash
# S2 Aliases

alias app='dj app'

alias b='brackets'
alias br='cd ~/Brain/hammer; pipenv shell'

alias co='~/commit'
alias console='ssh sensei@seamanfamily.org'

alias doc='dj doc'
alias deploy='o deploy'
alias dj='./manage.py'
alias ds='doc search'

alias ea='e $p/bin/bash-alias'

alias firefox='open /Applications/Firefox.app'

alias g='grep'
alias ga='git add -A'
alias gc='git commit -m'
alias gco='git checkout'
alias gd='vc diff'
alias gl='git log --name-only'
alias gs='vc status'

alias h='history 40'
alias host='hostname'

alias ip='ifconfig|grep "inet "'

alias l='ls -al'
alias le='less'
alias ll='ls -l'

alias o='dj ocean'

alias p='python'
alias pull='vc pull'
alias push='vc push'
alias py='figlet Brain&&which python&&python --version&&pip list&&echo directory is `pwd`'

alias r=reset

alias s='app search'
alias s1='cd ~/Sensei/hammer; pipenv shell'
alias s2='cd ~/S2/hammer; pipenv shell'

alias tlike='tst like'
alias tlist='tst list'
alias todo='p bin/todo.py'
alias tout='tst output'
alias tres='tst results|less'
alias trun='tst run'
alias tst='dj tst '

alias u='cd ..; l'

alias vc='dj vc'


# ------------------------------
# Functions

function deploy {
    vc commit $* &&
    brain deploy $*
}

function ce {
    cd $p && e */$1.py
}

function commit {
    git status &&
    git add . &&
    git commit -m "$*" &&
    git push
}

function d {
    d=$1
    [ "$1" == "" ] && d="$p"
    echo $d && cd $d && ls -al
}

